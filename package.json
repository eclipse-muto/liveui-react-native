{
  "name": "@eclipse-muto/liveui-react-native",
  "version": "0.2.2",
  "description": "Includes RemoteComponent used by LiveUI applications.",
  "author": "composiv",
  "license": "Apache-2.0",
  "module": "src/index.tsx",
  "main": "src/index.tsx",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "lint-fix": "tsdx lint --fix",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "@eclipse-muto/liveui-core": ">=0.1.0",
    "react": ">=16",
    "react-native": ">=0.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/liveui-react-native.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/liveui-react-native.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@eclipse-muto/liveui-core": "^0.2.0",
    "@rollup/plugin-json": "^5.0.1",
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/jest": "^29.0.3",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.7",
    "enzyme": "^3.11.0",
    "husky": "^8.0.1",
    "react": "^17.0.2",
    "react-native": "^0.6",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.3",
    "whatwg-fetch": "^3.6.2"
  }
}
